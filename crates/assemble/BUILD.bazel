load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

rust_library(
    name = "assemble",
    srcs = glob(["src/**/*.rs"]),
    crate_root = "src/lib.rs",
    edition = "2024",
    visibility = ["//visibility:public"],
    deps = [
        "//crates/doc",
        "//crates/json",
        "//crates/labels",
        "//crates/models",
        "//crates/proto-flow",
        "//crates/proto-gazette",
        "//crates/tables",
        "@crates_io//:bytes",
        "@crates_io//:fxhash",
        "@crates_io//:itertools",
        "@crates_io//:lazy_static",
        "@crates_io//:pbjson-types",
        "@crates_io//:percent-encoding",
        "@crates_io//:regex",
        "@crates_io//:serde",
        "@crates_io//:serde_json",
        "@crates_io//:superslice",
        "@crates_io//:thiserror",
        "@crates_io//:time",
        "@crates_io//:tracing",
        "@crates_io//:url",
    ],
)

rust_test(
    name = "assemble_lib_test",
    crate = ":assemble",
    edition = "2024",
    data = glob(["src/**/snapshots/*.snap"]),
    env = {
        "INSTA_WORKSPACE_ROOT": ".",
    },
    deps = [
        "@crates_io//:insta",
    ],
)
