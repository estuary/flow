load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "locate-bin",
    srcs = glob([
        "src/**/*.rs",
    ]),
    crate_root = "src/lib.rs",
    edition = "2024",
    deps = [
        "@crates_io//:anyhow",
        "@crates_io//:tracing",
        "@crates_io//:which",
    ],
)

rust_test(
    name = "locate-bin_lib_test",
    crate = ":locate-bin",
    size = "small",
    edition = "2024",
)
