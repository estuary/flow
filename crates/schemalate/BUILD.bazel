        "@crates_io//:itertools",
        "@crates_io//:lazy_static",
        "@crates_io//:prost",
        "@crates_io//:regex",
        "@crates_io//:serde",
        "@crates_io//:serde_json",
        "@crates_io//:thiserror",
        "@crates_io//:tracing",
        "@crates_io//:url",
    ],
)
