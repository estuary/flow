    name = "flow-schemalate",
    srcs = ["src/main.rs"],
    edition = "2024",
    visibility = ["//visibility:public"],
    rustc_env = {
        "FLOW_VERSION": "0.0.0-dev",
    },
    deps = [
        ":schemalate",
        "//crates/doc",
        "//crates/flow_cli_common",
        "//crates/json",
        "//crates/proto-flow",
        "@crates_io//:anyhow",
