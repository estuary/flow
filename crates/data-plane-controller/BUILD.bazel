]

[
    rust_test(
        name = test_name,
        srcs = [
            "tests/{}.rs".format(test_name),
            "tests/util.rs",
        ],
        size = "small",
        compile_data = glob(["src/**/*.json"]),
        data = glob(["tests/snapshots/**/*.snap"]),
        edition = "2024",
        env = {
            "INSTA_WORKSPACE_ROOT": ".",
        },
        deps = _INTEGRATION_TEST_DEPS,
