    "@crates_io//:serde_yaml",
    "@crates_io//:sqlx",
    "@crates_io//:tempfile",
    "@crates_io//:tokio",
    "@crates_io//:tracing",
    "@crates_io//:tracing-subscriber",
    "@crates_io//:url",
