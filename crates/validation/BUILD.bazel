rust_library(
    name = "validation-wasm",
    srcs = glob(
        include = ["src/**/*.rs"],
        exclude = [],
    ),
    compile_data = glob([
        "src/**/*.yaml",
        "src/**/*.snap",
    ]),
    crate_name = "validation",
    crate_root = "src/lib.rs",
    edition = "2024",
